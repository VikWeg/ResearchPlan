% headline
\setbeamertemplate{headline}{
  \leavevmode
\vskip0.01\paperwidth
\begin{columns}
\column{0.95\paperwidth}
  \begin{beamercolorbox}[wd=0.95\paperwidth,center]{headline}
    \begin{columns}[T]
          \begin{column}{.01\paperwidth}
      \end{column}
          \begin{column}{.25\paperwidth}
        \vskip1.7cm
        \begin{center}
          \includegraphics[width=.7\linewidth]{eth_logo_kurz_neg.eps}
          %\includegraphics[height=.25\linewidth]{nictalogo}
        \end{center}
        \vskip0.3cm
      \end{column}
      \begin{column}{.01\paperwidth}
      \end{column}
      \begin{column}{.75\paperwidth}
        \vskip4ex
        \raggedright
        \usebeamercolor{title in headline}{\color{fg}\textbf{\LARGE{\inserttitle}}\\[2ex]}
        \usebeamercolor{author in headline}{\color{fg}\textit{\Large{\insertauthor}}\\[5ex]}
        \usebeamercolor{institute in headline}{\color{fg}\large{\insertinstitute}}
      \end{column}


    \end{columns}
    \vskip0.02\paperwidth
  \end{beamercolorbox}
\end{columns}
%\vspace{-5cm}
%  \begin{beamercolorbox}[wd=\paperwidth]{lower separation line head}
%    \rule{0pt}{2pt}
%  \end{beamercolorbox}
}


\setbeamertemplate{block begin}{
  \vskip1ex
  \begin{beamercolorbox}[rounded=true,leftskip=1cm,colsep*=.75ex]{block title}%
    \usebeamerfont*{block title}\insertblocktitle
  \end{beamercolorbox}%
  {\ifbeamercolorempty[bg]{block body}{}{\nointerlineskip\vskip-0.5pt}}%
  \usebeamerfont{block body}%
  \begin{beamercolorbox}[rounded=true,colsep*=.75ex,sep=.75ex,vmode]{block body}%
    \ifbeamercolorempty[bg]{block body}{\vskip-.25ex}{\vskip-.75ex}\vbox{}%
  }
  \setbeamertemplate{block end}{
  \end{beamercolorbox}
}

\setbeamertemplate{block alerted begin}{
  \vskip1ex
  \begin{beamercolorbox}[rounded=true,leftskip=1cm,colsep*=.75ex]{block title alerted}%
